# This function is a binary clock
fn binary_clock() {
    fn to_bin(n) {
        let output = [];
        while n != 0 {
            output.push_front(n % 2);
            n = n \ 2;
        };
        return output;
    };

    let hours = time.hour;
    if hours > 12 {
        hours -= 12;
    };

    println(to_bin(hours).join(""));
    println(to_bin(time.minute).join(""));
};

binary_clock();
